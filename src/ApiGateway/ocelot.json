    {
      "UpstreamPathTemplate": "/api/Player",
      "UpstreamHttpMethod": [ "Get", "Post", "Put" ],
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7209
        }
      ],
      "DownstreamPathTemplate": "/api/v1/Player"
    },
    {
      "UpstreamPathTemplate": "/api/Player/{id}",
